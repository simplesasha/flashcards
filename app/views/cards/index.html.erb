<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Все карточки</title>
</head>
<body>

	<section id="container">
		<% @card.each do |card| %>
			<div class="col-md-4">
				<%= card.original_text %> <br> 
				<h5><%= card.translated_text %></h5> <br>
				<%= card.review_date.strftime('%d/%m/%Y') %> <br>
				<p><%= link_to 'Редактировать', edit_card_path(card) %> | <%= link_to 'Удалить', card_path(card), method: :delete %></p>
			</div>
		<% end %>
	</section>
	
</body>
</html>
